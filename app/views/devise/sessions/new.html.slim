.d-flex.align-items-center.justify-content-center
  .card.border-dark.shadow.p-3.w-25.m-5
    = link_to t('register'), new_user_registration_path, class: 'float-right btn btn-outline-primary'
    h4.card-title.mb-4.mt-1.d-flex.align-items-center.justify-content-center.m-2
      | #{t('sign_in')}
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = render 'devise/shared/error_messages'
      .form-group
        = f.label t('mail_label')
        = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Email'
      .form-group
        = f.label t('password_label')
        = f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: '******'
      .form-group.d-flex.align-items-center.justify-content-center.m-2
        = f.submit t('sign_in'), class: 'btn btn-primary btn-block'
